@import "nib";
@import "_variables";
@import "_util/mixin";
@import "_util/grid";

global-reset();


@font-face {
  font-family: FontAwesome;
  font-style: normal;
  font-weight: normal;
}

html, body {
  height: 100%;
}

body {
  background: $color-background;
  font: $font-size $font-sans;
  -webkit-text-size-adjust: 100%;
}

.outer {
  clearfix();
  max-width: 1280px;
  margin: 0 auto;
  padding: 0 $gutter-width;
}

.container {
  padding: 0 $gutter-width;
}

.inner {

}

.row {
  display: flex;
  align-items: center;
}

.left, .alignleft {
  float: left;
}

.right, .alignright {
  float: right;
}

.clear {
  clear: both;
}


.mobile-nav-on {
  overflow: hidden;
}



@import "_extend";
@import "_partial/header";
@import "_partial/article";
@import "_partial/comment";
@import "_partial/archive";
@import "_partial/footer";
@import "_partial/highlight";
@import "_partial/mobile";


