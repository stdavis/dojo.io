vr(n) {
	emRhythm(n);
}

pad(n) {
	vr(n);
}

full() {
	width: 100vw;
	position: relative;
	left: 50%;
	right: 50%;
	margin-left: -50vw;
	margin-right: -50vw;
	max-width: 100vw;
}
	
contain() {
	clearfix();
	max-width: $max-width;
	margin: 0 auto;
	padding-left: pad(4);
	padding-right: pad(4);
	width: 100%;
}

card() {
	margin: 20px 0;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.25);
}

// z-depth official shadows
// (https://www.polymer-project.org/components/paper-elements/demo.html#paper-shadow)


$shadow1 = 0 1px 4px 0 rgba(0, 0, 0, 0.37);
$shadow2 = 0 6px 10px 0 rgba(0, 0, 0, 0.3), 0 2px 2px 0 rgba(0, 0, 0, 0.2);
$shadow3 = 0 13px 25px 0 rgba(0, 0, 0, 0.3), 0 11px 7px 0 rgba(0, 0, 0, 0.19);
$shadow4 = 0 20px 40px 0 rgba(0, 0, 0, 0.3), 0 14px 12px 0 rgba(0, 0, 0, 0.17);
$shadow5 = 0 27px 55px 0 rgba(0, 0, 0, 0.3), 0 17px 17px 0 rgba(0, 0, 0, 0.15);
$shadows = $shadow1, $shadow2, $shadow3, $shadow4, $shadow5;


z($depth = 1) {
	box-shadow: $shadows[$depth - 1];
}
