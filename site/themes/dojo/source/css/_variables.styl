// Colors
$color-default = rgba(0,0,0,0.8);
$color-meta = $color-default;
$color-grey = #999;
$color-background-light = #fdfdfd;
$color-border = #eee;
$color-link = #258fb8;
$color-code-background = #F0F0F0;
$color-background = #fff;
$color-widget-background  = #ddd;
$color-widget-border = #ccc;
$color-mobile-nav-background = #191919;
$color-twitter = #00aced;
$color-facebook = #3b5998;
$color-pinterest = #cb2027;
$color-google = #dd4b39;

$header-background = #222127;
$footer-background = $color-background-light;

/* Your settings for Typesettings :) */
/* https://github.com/ianrose/typesettings */

$heading-font = 'Roboto Slab', serif;
$default-font = 'Lato', sans-serif;
$font-mono = 'Roboto Mono', Monaco, monospace;


$text-color:= $color-default;
$base-vertical-unit = 8px;
$base-line-multi = 3.5;
$base-font-size = 16px;
$ms-ratio = 1.250;
$paragraph-indent = false;
$paragraph-justify = true;
$load-typesetted = true;


// Rupture Settings
scale = 0 400px 600px 800px 1050px



/* Sizing */

//Max width of outer container
$max-width = rem(1000px);
$content-max-width = rem(900px);

$logo-size = rem(40px);
$header-height = vr(9);
$header-offset = vr(12);


