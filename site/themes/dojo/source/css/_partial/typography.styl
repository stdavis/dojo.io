body {
    color: $color-default;
    font-family: $default-font;
}

ul {
    ul();
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: $heading-font;
	font-weight: 400;
}

a:link,
a:hover {
	text-decoration: none;
}

a {
  link: $blue 'darken';
}


time,
.time {
  text-transform: none;
}

p code {
  background-color: $color-code-background;
  border: 1px solid darken($color-border, 5%);
  border-radius: 3px;
  color: $color-inline-code;
  padding: 3px 4px;
  white-space: nowrap;
}

code {
  font-family: $font-mono;
  font-size: 0.9rem;
}