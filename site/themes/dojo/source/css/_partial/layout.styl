body {
	display: flex;
	min-height: 100vh;
	flex-direction: column;
}

.content-container {
	contain();
}

.page-content {
	padding-top: $header-offset;
	flex: 1;

	.content-container {
		max-width: $content-max-width;

		p {
			max-width: 100%;
		}
	}
}


.outer {
	outer();
}

.inner {
	max-width: $max-width;
}

.row {
	display: flex;
}