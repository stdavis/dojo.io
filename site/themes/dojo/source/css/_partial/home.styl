.body-front-page {
		background: #000000 url("images/bg.jpg") 50% 50% no-repeat;
		background-size: cover;
		font-size: 16px;
		height: 100%;
		margin: 0;
		padding: 0;
		width: 100%;

	.site-header {
  		background: rgba($header-background, 0.2);
	}

	.bodyContainer {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		height: 100%;
		width: 90%;
		margin: auto;

		.dragon {
			height: 25%;
			width: 50%;
			padding-top: 2rem;
		}

		.teaser,
		.sub {
			color: #fff;
			font-size: 2.5rem;
			font-weight: 300;
			letter-spacing: 0.2rem;
			text-transform: uppercase;
			text-shadow: 0px 0px 7px rgba(0, 0, 0, 1);
			text-align: center;
			margin: 0 auto;
			padding: 0 0 1rem 0;
		}

		.sub {
			font-size: 1.25rem;
		}

		.btn {
			border: 1px solid rgba(255,255,255,0.2);
			border-radius: 2px;
			padding: 0.7rem 1.25rem 0.5rem 1.25rem;
			transition: all 0.3s;
			width: 90px;
			display: block;
			margin: 2rem auto;

			&:hover {
				background: linear-gradient(45deg, rgba(10,7,57,0.5) 0%, rgba(104,3,47,0.5) 100%);
				border-color: rgba(#fff, 0.35);
				box-shadow: 0px 0px 20px 0px rgba(#fff,0.25);
			}
		}

		@media only screen and (max-device-width : 736px) and (orientation : landscape)
		{
			.teaser {
				font-size: 3rem;
				font-weight: 600;
				padding-top: 1rem;
			}

			.sub {
				font-size: 1.2rem;
				font-weight: 400;
				padding-right: 1rem;
				padding-left: 1rem;
			}

			.btn {
				padding: 0.8rem 2rem;
				width: 15%;
			}
		}

		@media only screen and (max-device-width : 700px) and (orientation : portrait)
		{
			.teaser {
				font-size: 5rem;
				font-weight: 600;
			}
			.sub {
				font-size: 2.5rem;
				font-weight: 400;
				padding-bottom: 2rem;
			}

			.btn {

				padding: 1rem 2rem 1rem 2rem;
				width: 30%;
			}
		}
	}
}
