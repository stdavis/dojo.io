.site-header {
  background: $header-background;

  .outer {
    max-width: 1000px;
  }
  
  .row {
      align-items: center;
      justify-content: space-between;
      height: vr(7, $ms-down1);
  }

// Flexbox Item - Left
  .header-logo {
    margin: 0;
    padding: vr(1, $ms-down1) 0 0 0;
    height: 2.5em;
  }

// Flexbox Item - Right
  .site-nav {
    .main-nav-link {
      color: rgba(255, 255, 255, 0.8);
      display: inline-block;
      font-family: $font-slab;
      font-size: vr(1, $ms-down3);
      font-weight: 300;
      flex: 0 1 auto;
      transition: color 0.3s;
      padding-left: vr(1, $ms-down1);
      

      &:hover {
        color: rgba(255, 255, 255, 1);
      }

      .nav-icon {
        width: auto;
        height: 1.5em;
        opacity: 0.8;
        transition: opacity 0.3s;
        vertical-align: middle;

        &:hover {
          opacity: 1;
        }
      }
    }
  }
}