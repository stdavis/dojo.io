.body-archive,
.body-single-page {
	section {
		margin-left: auto;
		margin-right: auto;
		max-width: 740px;
	}
}

.author-meta {
	setType(3, $ms-down1);

	.author-name {
		vertical-align: middle;
	}
}

.author-avatar {
	object-fit: cover;
	border-radius:50%;
	margin-right: emRhythm(1, $ms-down1);
	width: emRhythm(4, $ms-down1);
	height: emRhythm(4, $ms-down1);
	vertical-align: middle;
}