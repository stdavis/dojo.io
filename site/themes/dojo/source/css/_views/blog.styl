.body-archive,
.body-single-page {
	section {
		margin-left: auto;
		margin-right: auto;
		max-width: $content-max-width;
	}
}

.author-meta {
	setType(3, $ms-down1);

	.author-name {
		vertical-align: middle;
	}
}

.author-avatar {
	object-fit: cover;
	border-radius:50%;
	margin-right: vr(2);
	width: vr(5);
	height: vr(5);
	vertical-align: middle;
}