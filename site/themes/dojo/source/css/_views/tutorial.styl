.body-tutorial {
	.page-content {
		.content-container {
			max-width: $content-max-width;

			p {
				max-width: 100%;
			}
		}

		.split-content {
			max-width: 48em;
			margin: 0 auto;

			.tutorial-content {
				padding-bottom: 45vh;
			}

			.editor {
				width: 100vw;
				position: fixed;
				bottom: -35px;
				right: 0;
				left: 0;

				.editor-frame {
					width: 100%;
					height: 40vh;
				}
			}
		}
	}

	.solution-container {
		area: #D4EEF8
		margin-bottom: vr(4);

		pre[class*="language-"] {
			margin-bottom: 0;
		}

		[id^='showS'] {
			pre code {
				transition(opacity 0.3s);
				opacity: 1;
			}

			&.hidden {
				pre code {
					opacity: 0.05;
				}
			}
		}

		
	}

	.toggle-solution {
		button();
		width: 100%;

		&:active {
			  click-down();
		}

		&:focus {
			outline: 0;
		}
	}
}