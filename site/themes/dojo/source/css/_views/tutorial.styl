.body-tutorial {
	.page-content {
		.content-container {
			max-width: $content-max-width;

			p {
				max-width: 100%;
			}
		}

		.split-content {
			max-width: 48em;
			margin: 0 auto;

			.tutorial-content {
				padding-bottom: 45vh;
			}

			.editor {
				width: 100vw;
				position: fixed;
				bottom: -35px;
				right: 0;
				left: 0;

				.editor-frame {
					width: 100%;
					height: 40vh;
				}
			}
		}
	}
}