// Individual Tutorials View

.body-tutorial {

	.page-content {

		.tutorial-content {
			margin-left: auto;
			margin-right: auto;
			max-width: $article-max-width;
			

			& > h1 {
				article-title();
				margin: pad(1.5) 0;
			}
		}

		.split-content {
			.tutorial-content {
				padding-bottom: 45vh;
			}

			.editor {
				width: 100vw;
				position: fixed;
				bottom: -35px;
				right: 0;
				left: 0;
				z-index: 3;
				.editor-frame {
					width: 100%;
					height: 40vh;
				}

				iframe {
					border: 0;
				}
			}
		}
	}

	.solution-container {
		area: #D4EEF8
		margin-bottom: vr(4);

		pre[class*="language-"] {
			margin-bottom: 0;
		}

		[id*='solution'] {
			pre code {
				transition(opacity 0.3s);
				opacity: 1;
			}

			&.hidden {
				pre code {
					opacity: 0.05;
				}
			}
		}
	}

	.toggle-solution {
		button();
		width: 100%;

		&:active {
			  click-down();
		}

		&:focus {
			outline: 0;
		}
	}
}