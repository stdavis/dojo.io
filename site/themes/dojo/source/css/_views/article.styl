.author-meta {
	setType(3, $ms-down1);
	margin-bottom: vr(3);

	.author-name {
		font-weight: bold;
		vertical-align: middle;
		uppercase();
	}
}

.author-avatar {
	object-fit: cover;
	border-radius:50%;
	margin-right: vr(2);
	width: vr(5);
	height: vr(5);
	vertical-align: middle;
}

.article-entry {

	// To become excerpt styling
	& > p:first-of-type {
		font-family: $heading-font;
		font-style: italic;
		font-size: emRhythm(5, $ms-up3);
		opacity: 0.7;
	}
	
	img {
		max-width: 100%;
	}
	
	.full-width {
		full();
	}
}

.article-date {
	padding-left: vr(2);
}