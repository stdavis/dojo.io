.body-single-page {

	.page-content .content-container {
		max-width: 800px;
	}

	.article-meta {
		margin-top: vr(0);
		text-align: center;
	}

	.article-title {
		text-align: center;

		+above(3) {
			font-size: emRhythm(4, $ms-down3);
		}
		
		+below(3) {
			font-size: emRhythm(4, $ms-down2);
		}

		+below(2) {
			font-size: emRhythm(3, $ms-down2);
		}
	}

	.article-entry {
		// Excerpt styling
		& > p:first-of-type {
			font-family: $heading-font;
			//font-style: italic;
			//font-size: emRhythm(5, $ms-up3);
			font-weight: 300;
			//opacity: 0.7;
			text-align: center;
		}
		
		.full-width {
			full();
		}

		img[title*="full"] {
			full();
			margin-bottom: vr(2);
		}
	}
}

.author-meta {
	setType(1, $ms-down2);
	margin-bottom: vr(3);

	.author-name {
		font-weight: bold;
		uppercase();
	}
}

.author-avatar {
	object-fit: cover;
	border-radius:50%;
	margin-right: vr(2);
	width: vr(5);
	height: vr(5);
	vertical-align: middle;
}

.article-date {
	padding-left: vr(2);
}