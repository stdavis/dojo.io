{
  "name": "dojo.io",
  "version": "1.0.0-pre",
  "description": "Static site for the Dojo Toolkit",
  "engines": {
    "node": ">= 6.0"
  },
  "private": true,
  "scripts": {
    "api": "ts-node ./support/run api",
    "build": "ts-node ./support/run build",
    "clean": "ts-node ./support/run clean",
    "command": "ts-node ./support/run",
    "ci": "ts-node ./support/run ci",
    "install": "cd site && npm i",
    "publish": "ts-node ./support/run publish",
    "serve": "grunt webserv",
    "test": "ts-node ./support/run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SitePen/dojoio.git"
  },
  "keywords": [
    "dojo",
    "site"
  ],
  "author": "SitePen <support@sitepen.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/SitePen/dojoio/issues"
  },
  "homepage": "https://dojo.io",
  "devDependencies": {
    "@types/es6-promise": "0.0.32",
    "@types/github": "0.0.0",
    "@types/node": "^6.0.55",
    "dojo-core": "^2.0.0-alpha.18",
    "dojo-has": "^2.0.0-alpha.6",
    "dojo-interfaces": "^2.0.0-alpha.10",
    "dojo-shim": "^2.0.0-beta.7",
    "dojo-streams": "^2.0.0-alpha.1",
    "gh-pages": "^0.12.0",
    "github": "^8.0.0",
    "grunt-contrib-clean": "^1.0.0",
    "grunt-shell": "^2.1.0",
    "load-grunt-tasks": "^3.5.2",
    "s-grid": "^1.2.0",
    "shelljs": "^0.7.5",
    "ts-node": "^2.0.0",
    "tslint-sitepen": "^0.1.0",
    "typescript": "^2.2.1",
    "webserv": "^0.6.1"
  },
  "dependencies": {
    "typedoc": "^0.5.7"
  }
}
